{
  "name": "dr-picklist",
  "displayName": "Dr Picklist",
  "publisher": "doctorpicklist",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:drPicklist.exportValues",
    "onCommand:drPicklist.importValues",
    "onCommand:drPicklist.exportDependencies",
    "onCommand:drPicklist.importDependencies",
    "onCommand:drPicklist.generateMetadata",
    "onCommand:drPicklist.prepareDeployment"
  ],
  "main": "out/extension.js",
  "bin": {
    "dr-picklist": "out/cli.js"
  },
  "contributes": {
    "configuration": {
      "title": "Dr Picklist",
      "properties": {
        "drPicklist.autoGenerateOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Exécuter automatiquement la génération des métadonnées depuis les CSV au démarrage."
        }
      }
    },
    "commands": [
      {
        "command": "drPicklist.exportValues",
        "title": "Dr Picklist: Export Values - Exporter une picklist vers CSV"
      },
      {
        "command": "drPicklist.importValues",
        "title": "Dr Picklist: Import Values - Importer/ajouter des valeurs depuis CSV"
      },
      {
        "command": "drPicklist.exportDependencies",
        "title": "Dr Picklist: Export Dependencies - Exporter les dépendances"
      },
      {
        "command": "drPicklist.importDependencies",
        "title": "Dr Picklist: Import Dependencies - Importer les dépendances depuis CSV"
      },
      {
        "command": "drPicklist.generateMetadata",
        "title": "Dr Picklist: Generate Metadata - Générer tous les fichiers XML"
      },
      {
        "command": "drPicklist.prepareDeployment",
        "title": "Dr Picklist: Prepare Deployment Package - Préparer le package de déploiement"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "jest -c jest.config.js",
    "test:watch": "jest -c jest.config.js --watch",
    "cli": "node out/cli.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "dependencies": {
    "csv-parse": "^5.5.0",
    "csv-stringify": "^6.5.0",
    "xmlbuilder2": "^3.1.1",
    "commander": "^12.0.0"
  }
}
